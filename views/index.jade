extends layout

block content
  h1.test= title
  p Welcome to #{title}
  //- Bucket for reading articles
  div.bucket_container(ondrop="drop(event)" ondragover="allowDrop(event)") BUCKET
    div.bucket
  //- Articles list
  div.articles
    div.article(ng-repeat="article in articles track by $index" class="col-lg-4")
      div(id='{{article.id}}' draggable="true" ondragstart="onDragStart(event)")
        div.title 
          b {{article.title}}
        br
        div.text {{article.text}}
        div.drag(data-id='{{article.id}}')
