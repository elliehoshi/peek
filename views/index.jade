extends layout

block content
  h1.test= title
  p Welcome to #{title}
  //- Bucket for reading articles
  div.bucket_container(ondrop="drop(event)" ondragover="allowDrop(event)") 
    h4 BUCKET
    div.bucket.connected
  //- Animated Bucket
  div.animation_container
    div(id="stage")
    img(id='heart' src='images/heart.svg')
  //- Articles list
  div.articles.connected
    div.article(ng-repeat="article in articles track by $index")
      div(id='{{article.id}}' draggable="true" ondragstart="onDragStart(event)")
        div.title 
          b {{article.title}}
        br
        div.text {{article.text}}
